@using PortfolioProject.Data
@model University

@{
    Layout = "~/Views/Shared/_AdminActionLayout.cshtml";

}
<div style=" background: -webkit-linear-gradient(-135deg, #18d26e, #fcfcfc,#18d26e); ">

    <div class="main">

        <div class="container">
            <h2> Add New University</h2>
            <form id="signup-form" class="signup-form" action="/University/CreateUniversity">
                <h3>
                    University
                </h3>
                <fieldset>
                    <div class="form-row form-input-flex">



                        <div class="form-input">
                            <label>Enter University Name </label>
                            <input type="text" name="UniversityName" id="UniversityName" />
                        </div>
                    </div>



                </fieldset>
            </form>
        </div>

    </div>
</div>