@model TechnicalSkill
@using PortfolioProject.Data
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="about">
    <div class="container" data-aos="fade-up">

        <header class="section-header">
            <br />
            <br />
            <br />
            <br />
            <div class="container">
                <table class="table table-striped ">
                    <thead>
                        <tr>
                            <th>Skill Name</th>
                            <th>Remove</th>
                            <th>Edit</th>
                            <th>
                                @Html.ActionLink("Create", "TechnicalSkillCreate", "Skill",
                                new { @class = "btn btn-dark" })
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var x in (List<TechnicalSkill>)ViewBag.TechnicalSkills)
                            {
                                <tr>
                                    <td>
                                        @x.TechnicalSkillName
                                    </td>
                                    <td>
                                        @Html.ActionLink("Remove", "RemoveTechnicalSkill", "Skill",
                                       new { Id = x.TechnicalSkillId }, new { @style = "background:#18d26e ", @class = "btn text-white " })
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "EditTechnicalSkill", "Skill",
                                       new { TechnicalSkillId = x.TechnicalSkillId }, new { @style = "background:#18d26e ", @class = "btn text-white " })
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </header>

    </div>
</section>